            <div class="dropdown" id="dropdown-menu">
                <ul>
                    <li><a href="perfil">Perfil</a></li>
                    <li><a href="#" onclick="logout()">Cerrar sesión</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="notas">
        <h1 style="text-align: center;">7º1ª</h1>
        <form action="/guardar-nota" method="POST">
            <!-- Select de la persona -->
            <label for="alumno-select">Alumno:</label>
            <select id="alumno-select" name="alumno_id" required>
                <option value="45888806">Gonzalo Forneron (DNI: 45888806)</option>
                <option value="45885506">Antonio Martinez (DNI: 45885506)</option>
                <option value="45685506">Tomas Avanzatti (DNI: 45685506)</option>
                <option value="4">Mia alvarez</option>
                <option value="5">Iván Godoy</option>
                <option value="6">Lautaro Santana</option>
                <option value="7">Nadia Cabañas</option>
                <option value="8">Yamila Gimenez</option>
                <option value="9">Luz Ferreyra</option>
                <option value="10">Mariana Barnes</option>
                <option value="11">Franco Tedesco</option>
                <option value="12">Gio Pauletto</option>
                <option value="13">Lautaro Escobar</option>
                <option value="14">Genesis Miranda</option>
                <option value="15">Tamara Alvarez</option>
            </select>
    
            <!-- Select de la materia -->
            <label for="materia-select">Materia:</label>
            <select id="materia-select" name="materia_id" class="materia-select" required>
                <option value="1">Matematica</option>
                <option value="2">Ingles Tecnico</option>
                <option value="3">Marco Jurídico</option>
                <option value="4">Asistencia</option>
